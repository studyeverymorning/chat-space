.main__message__box{"data-message-id": "#{message.id}"}
  .main__message__box__top
    .main__message__box__top__name
      = message.user.name
    .main__message__box__top__time
      = message.created_at.strftime("%Y年%m月%d日 %H時%M分")
  .main__message__box__text
    - if message.content.present?
      %p.lower-message__content
        = message.content
    = image_tag message.image.url, class: 'lower-message__image' if message.image.present?