%div.flash-box
  %div.noticeグループを作成しました


%div.wrapper
  %div.chat-side
    %div.side-header
      %div.side-header__box
        %p.side-header__box__user-name
          = current_user.name
        %ul.side-header__box__menu
          %li.side-header__box__menu__new-group
          =link_to "/groups/new" do
            %i.fa.fa-edit
          %li.side-header__box__menu__edit-user
          = link_to edit_user_path(current_user) do
            = fa_icon 'cog', class: 'icon'

    %div.groups
      =link_to "/groups/2153/messages" do
        %div.group
          %p.group__group-name
            sss
          %p.group__latest-message
            ssss
      =link_to "/groups/2406/messages" do
        %div.group
          %p.group__group-name
            エキスパ
          %p.group__latest-message
            あああ
        
      =link_to "/groups/3094/messages" do
        %div.group
          %p.group__group-name
            新規グループ２
